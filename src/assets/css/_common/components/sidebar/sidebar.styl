.sidebar{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  width: 200px;
  background: #FFFFFF;
  box-shadow: 0 10px 30px -12px rgba(0, 0, 0, 0.42), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2);

  .nav{
    margin: 0 15px;
    margin-top: 15px;
    a {font-size : 14px;}
  }

  /*adjust theme */
  .nav-pills:not(.nav-pills-icons) > li > a {
    border-radius: 3px;
  }
}



.sidebar-background{
  position: absolute;
  top: 0;
  left : 0;
  display block;
  height: 100%;
  width : 100%
  background-size : cover;
  background-position center;
  background-image : url(../images/sidebar-1.jpg);
  z-index 1;

  &:after{
    position: absolute;
    z-index: 3;
    width: 100%;
    height: 100%;
    content: "";
    display: block;
    background: #000;
    opacity: .8;
  }
}

.sidebar-logo{
  position: relative;
  padding: 15px 15px;
  z-index: 4;

  &:after{
    content: '';
    position: absolute;
    bottom: 0;
    right: 15px;
    height: 1px;
    width: calc(100% - 30px);
    background-color: rgba(180, 180, 180, 0.3);
  }

  .simple-text{
    display: block;
    padding: 5px 0px;
    font-size: 18px;
    font-weight: 400;
    line-height: 30px;
    text-align: center;
    color: #FFFFFF;
    overflow: hidden;
    white-space: nowrap;
    text-transform: uppercase;
  }
}

.sidebar-wrapper{
  position: relative;
  height: calc(100vh - 75px);
  overflow: auto;
  z-index: 4;
  padding-bottom: 30px;

  .user {
    padding-bottom: 20px;
    margin: 20px auto 0;
    position: relative;

    &:after{
      content: '';
      position: absolute;
      bottom: 0;
      right: 15px;
      height: 1px;
      width: calc(100% - 30px);
      background-color: rgba(180, 180, 180, 0.3);
    }
  }

  .photo {
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 50%;
    margin: 0 auto;
    box-shadow: 0 10px 30px -12px rgba(0, 0, 0, 0.42), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2);

    img{
      width:100%;
    }
  }
}

