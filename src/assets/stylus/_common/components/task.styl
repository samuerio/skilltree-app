.task{
  position: relative;
  padding: 5px 10px 10px;
  margin-left: 20px;
  border-bottom: 1px solid #E1E1E1;
  font-size: 14px;

  &>.icon{
    position: absolute;
    left: 10px;
    top: 14px;
    cursor: pointer;
    font-size: 20px;
  }

  .title{
    position: relative;
    padding: 3px 0 0 3px;
    margin: 5px 5px 5px 26px;
    border-radius: 3px;
  }

  .created-time{
    color: #FFA487;
    text-decoration: none;
    font-size: 12px;
    margin-left: 30px;
    line-height: 20px;

    a{
      color: #FFA487;
    }
  }

  textarea {
    width: 100%;
    height: 20px;
    padding: 0;
    margin: 0;
    line-height: 20px;
    border: none;
    overflow: hidden;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    outline: 0;
    resize: none;
    word-break: break-all;
    word-wrap: break-word;
  }
}