.sidebar {
  position: fixed;
  top: 60px;
  width: 80px;
  height: 100%;
  background-color : rgb(51, 51, 51);

  img{
    display: inline-block;
    margin-top: 3px;
    height: 32px;
    width: 32px;
    border: 1px solid #FFF;
    border-radius: 32px;
    background: #FFF;
  }

  .item{

    &:hover{
      color: #fff;
      background-color: rgba(255,255,255,.1);
    }

    &.active{
      background-color: rgba(255,255,255,.1);
    }

    display: inline-block;
    width: 100%;
    height: auto;
    padding: 8px 0;
    text-align: center;
  }

  .icon{
    display: block;
    margin: 0 auto .3em;
    margin-bottom: 3px;
    font-size: 1.5em;
    color: #fff;
    opacity: 1;
  }

  .menu-title{
    font-size: 12px;
    color: rgba(255,255,255,.8);
  }

}