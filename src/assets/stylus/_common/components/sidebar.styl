.sidebar{

  .item{
    display: inline-block;
    width: 100%;
    height: auto;
    padding: 8px 0;
    text-align: center;

    //覆盖原来默认的icon样式
    .icon{
      display: block;
      margin: 0 auto .3em;
      margin-bottom: 3px;
      font-size: 1.5em;
      color: #fff;
      opacity: 1;
    }

    img{
      display: inline-block;
      margin-top: 3px;
      height: 32px;
      width: 32px;
      border: 1px solid $white;
      border-radius: 32px;
      background: $white;
    }

    &:hover{
      color: $white;
      background-color: rgba(255,255,255,.1);
    }

    &.active{
      background-color: rgba(255,255,255,.2);
    }
  }


  .item-title{
    font-size: 12px;
    color: rgba(255,255,255,.8);
  }
}