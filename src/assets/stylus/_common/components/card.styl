.card{
  position: relative;
  display: inline-block;
  width: 100%;
  margin-bottom: 30px;
  margin-top: 30px;
  color: rgba(0,0,0, 0.87);
  background: #fff;
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(0, 0, 0, 0.12);
  border-radius: 6px;

}

.card-title{
  font-weight: 700;

  a{
    color: #3C4858;
    text-decoration: none;
  }
}

.card-content{
  padding: 15px 30px;
}

.card-footer{
  margin-top: 15px;

  .author{
    color: #999999;
  }

  .stats{
    float: right;
    line-height: 30px;
    color: #999999;
  }

  .avatar{
    width: 30px;
    height: 30px;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 5px;
  }

  img{
    box-shadow: 0 16px 38px -12px rgba(0, 0, 0, 0.56), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2);
    vertical-align: middle;
  }

  a {
    color: #383a3f;
  }
}